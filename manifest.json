{
  "manifest_version": 3,
  "name": "SeekSage",
  "version": "1.0",
  "description": "A powerful in-page text search extension that helps you find wisdom in web pages",
  "default_locale": "en",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Shift+Alt+F"
      },
      "description": "Open SeekSage"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}