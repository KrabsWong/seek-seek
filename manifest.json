{
  "manifest_version": 3,
  "name": "Seek Seek",
  "version": "1.0",
  "description": "A powerful in-page text search extension for finding text in web pages",
  "default_locale": "en",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_action": {
      "description": "Open Seek Seek"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}